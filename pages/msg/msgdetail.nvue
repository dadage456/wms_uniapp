<script>
import { getNoticeDetail } from '@/api/system/goodsUp';
export default {
	data() {
		return {
			Notice: {},
			noticeId: ''
		};
	},
	onLoad(options) {
		var _this = this;
		_this.noticeId = options.noticeId;
		_this.getNotice();
	},
	methods: {
		showImgs: function (commentsIndex, imgIndex) {
			console.log(commentsIndex, imgIndex);
			uni.previewImage({
				urls: this.commentContents[commentsIndex].imgs,
				current: this.commentContents[commentsIndex].imgs[imgIndex]
			});
		},
		getNotice() {
			getNoticeDetail(this.noticeId).then((response) => {
				this.Notice = response.data;
			});
		}
	}
};
</script>
