	<view class="gui-padding">
		<fui-nav-bar isFixed title="通知列表" @leftClick="page_back">
			<fui-icon name="arrowleft"></fui-icon>
		</fui-nav-bar>
		<view class="fui-block"></view>

		<view class="gui-comments">
			<view class="gui-comments-items gui-flex gui-rows gui-nowrap gui-space-between">
				<view class="gui-comments-body">
					<view class="gui-flex gui-rows gui-nowrap gui-space-between gui-align-items-center">
						<text class="gui-comments-header-text gui-text gui-primary-color">{{ Notice.noticeTitle }}</text>
						<text class="gui-comments-header-text gui-icons gui-color-gray gui-text-small" :class="[Notice.nickName ? 'gui-color-blue' : '']">
							&#xe6ea; {{ Notice.nickName }}
						</text>
